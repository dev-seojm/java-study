		System.out.println(10.0/3); // 10.0 으로나누어 실수로 출력
		
		System.out.printf("%o%n",15);
		System.out.printf("%d%n",15);
		System.out.printf("%x%n",15);
		System.out.printf("%s%n", Integer.toBinaryString(15)); // 1111 이진 문자열 
		
		
		
		// 2. 8진수와 16진수에 접두사 붙히기 
		
		System.out.printf("%#o%n",15); // 지시자 앞에 #을 넣어주면 접두사 붙음 
		System.out.printf("%#x%n",15); // 지시자 앞에 #을 넣어주면 접두사 붙음 
		System.out.printf("%#X%n",15); // 지시자 앞에 #을 넣어주면 접두사 붙음 
		
		// 3. 실수출력을 위한 지시자 %f - 지수형식 (%e), 간략한 형식(%g)
		
		float f = 123.4567890f;
		
		System.out.printf("%f%n",f); // 123.456787 float = 정밀도 7자리까지 뒤엔 의미 없음 
		System.out.printf("%e",f);   // 1.234568e+02 = 지수형식으로 (10)²
		System.out.printf("%g",123.456789); // 간략한 형식 
		System.out.printf("%g",0.00000001); // 간략한 형식 
		*/
		
		System.out.printf("[%5d]%n",10);
		System.out.printf("[%-5d]%n",10);
		System.out.printf("[%05d]%n",10); 
		
		double d = 1.23456789;
		System.out.printf("%.6f%n",d);
		
		
		String url = "www.codechobo.com";
				
		System.out.printf("[%s]%n", url);
		System.out.printf("[%20s]%n", url); // 최소 20글자의 출력 공간을 확보(우측정렬)
		System.out.printf("[%-20s]%n", url); // -를 붙히면 좌측끝에 붙는다.
		System.out.printf("[%.10s]%n", url); // .을 붙히면 문자열의 일부만 출력한다.
		
		
		
		
	}
}
